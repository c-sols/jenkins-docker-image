{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Jenkins Continuous Integration Server",
  "Resources": {
    "JenkinsServer": {
      "Type": "AWS::EC2::Instance",
      "Metadata": {
        "AWS::CloudFormation::Init": {
          "config": {
            "packages": {
              "yum": {
                "docker": [],
                "git": [],
                "make": []
              }
            },
            "services": {
              "sysvinit": {
                "docker": {
                  "enabled": "true",
                  "ensureRunning": "true"
                }
              }
            }
          }
        }
      },
      "Properties": {
        "AvailabilityZone": "ca-central-1a",
        "ImageId": "ami-0bf54ac1b628cf143",
        "InstanceInitiatedShutdownBehavior": "stop",
        "InstanceType": "t2.micro",
        "KeyName": "jenkins-server",
        "Monitoring": false,
        "SecurityGroups": [
          "coding-solutions-security-group-test"
        ],
        "Tenancy": "default",
        "UserData": { "Fn::Base64" : { "Fn::Join" : ["", [
          "#!/bin/bash -v\n",
          "yum update -y aws-cfn-bootstrap\n",

          "# Install packages\n",
          "/opt/aws/bin/cfn-init -s ", { "Ref" : "AWS::StackId" }, " -r JenkinsServer ",
          "    --region ", { "Ref" : "AWS::Region" }, " || error_exit 'Failed to run cfn-init'\n",

          "# Startup jenkins\n",
          "cd /home/ec2-user/\n",
          "git clone https://github.com/rhpereda/jenkins-server.git\n",
          "cd jenkins-server\n",
          "sudo make docker-run\n"
        ]]}}
      }
    }
  }
}